<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeChores.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeChores.UI"
    Shell.FlyoutBehavior="Flyout"
    Title="HomeChores.UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Calendar"
        ContentTemplate="{DataTemplate local:CalendarPage}"
        Route="CalendarPage" />

    <!-- The page we navigate to, not necessarily shown in the menu -->
    <ShellContent
        Title="Daily Chores"
        ContentTemplate="{DataTemplate local:DailyChoresPage}"
        Route="DailyChoresPage" />
</Shell>

