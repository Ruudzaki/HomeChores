<ContentPage
    x:Class="HomeChores.UI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout Padding="20">
        <Entry x:Name="ChoreTitleEntry" Placeholder="Enter chore title..." />
        <Button Text="Add Chore" Clicked="AddChore_Clicked" />

        <CollectionView ItemsSource="{Binding Chores}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="18" TextColor="Black" />
                        <Label Text="{Binding IsCompleted}" FontSize="14" TextColor="Gray" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>