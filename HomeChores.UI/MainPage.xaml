<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:HomeChores.UI.Converters"
             x:Class="HomeChores.UI.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToTextDecorationsConverter x:Key="BoolToTextDecorationsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="20">
        <Entry x:Name="ChoreTitleEntry" Placeholder="Enter chore title..." />
        <Button Text="Add Chore" Clicked="AddChore_Clicked" />

        <CollectionView x:Name="ChoresCollection" ItemsSource="{Binding Chores}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Title}"
                               TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationsConverter}}"
                               FontSize="18" 
                               TextColor="Black" />

                        <Label Text="{Binding IsCompleted}"
                               FontSize="14"
                               TextColor="Gray" />

                        <!-- Toggle Button -->
                        <Button Text="Toggle"
                                Command="{Binding Source={x:Reference ChoresCollection}, Path=BindingContext.ToggleChoreCommand}"
                                CommandParameter="{Binding .}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>