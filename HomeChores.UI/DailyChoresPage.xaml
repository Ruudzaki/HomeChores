<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HomeChores.UI.DailyChoresPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:HomeChores.UI.ViewModels"
    xmlns:entities="clr-namespace:HomeChores.Domain.Entities;assembly=HomeChores.Domain"
    Title="Daily Chores">

    <VerticalStackLayout Padding="20">
        <Label Text="{Binding Title}" FontSize="24" />
        <CollectionView ItemsSource="{Binding Chores}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="entities:Chore">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="16" />
                        <Label Text="{Binding PlannedDate}" FontSize="12" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
